<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/d"
    tools:context=".signup">

    <TextView
        android:id="@+id/text_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="如果您还没有账号\n赶紧注册吧"
        android:textSize="29sp"/>
    <EditText
        android:id="@+id/ed_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint=" 请输入用户名"
        android:background="@drawable/bg_username"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_username"
        >
        <TextView
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:text=" 注册成为:"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="20sp"/>
        <RadioGroup
            android:id="@+id/edit_sex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/edit_male"
                android:layout_width="115dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="教师" />

            <RadioButton
                android:id="@+id/edit_female"
                android:layout_width="115dp"
                android:textSize="20sp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="学生" />

        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/ed_email"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint=" 请输入邮箱账号"
            android:background="@drawable/bg_username"
            android:textSize="20sp"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="发送验证码"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@drawable/press_effect2"
            android:textSize="19sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/ed_pin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint=" 请输入验证码"
            android:background="@drawable/bg_username"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/ed_password1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint=" 请输入密码"
            android:background="@drawable/bg_username"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/ed_password2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint=" 请再次确认密码"
            android:background="@drawable/bg_username"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn_now_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="马 上 注 册"
            android:background="@drawable/press_effect2"
            android:textSize="25sp"/>
    </LinearLayout>


</LinearLayout>