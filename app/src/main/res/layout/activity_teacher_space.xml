<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@color/grey">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:orientation="vertical"
                android:padding="0dp">
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_username"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="用户名:"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="25sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_balance"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="身份："
                        android:textColor="@color/white"
                        android:textSize="25sp" />
                    <TextView
                        android:id="@+id/tv_identity"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="25sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="80dp"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="手机号："
                    android:textColor="@color/white"
                    android:textSize="25sp" />
                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="190dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="25sp" />
                </LinearLayout>
                <Button
                    android:id="@+id/logout"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="310dp"
                    android:text="退出"
                    android:textColor="@color/orange"
                    android:textSize="30dp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="0dp"
                android:padding="0dp">

                <Button
                    android:id="@+id/points_state"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/yellow"
                    android:text="积分说明"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/charge_standard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/yellow"
                    android:text="收费标准"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/tutor_help"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/yellow"
                    android:layout_marginLeft="2dp"
                    android:text="家教帮助"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:padding="0dp">

                <Button
                    android:id="@+id/my_order"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/press_effect2"
                    android:text="我的接单记录"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/my_class"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/press_effect2"
                    android:text="我的课程"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/appointment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/press_effect2"
                    android:text="学员的约课"
                    android:textColor="@color/black" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:padding="0dp">

                <Button
                    android:id="@+id/give_classes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/press_effect2"
                    android:text="我的授课记录"
                    android:textColor="@color/black"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="2"
                    android:background="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="0dp"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/select"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/press_effect2"
                    android:text="挑选学员"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/my_eval"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/press_effect2"
                    android:text="我的评价"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/teacher_video"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/press_effect2"
                    android:text="我的录播课"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="0.05dp"
                android:padding="0dp">


                <Button
                    android:id="@+id/info_show"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/press_effect2"
                    android:text="教员简历查看"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/info_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/press_effect2"
                    android:text="教员简历修改"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="0.05dp"
                android:padding="0dp">
                <Button
                    android:id="@+id/pw_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/press_effect2"
                    android:text="密码修改"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/my_card"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/press_effect2"
                    android:text="证件管理"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/kf"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/press_effect2"
                    android:text="联系客服"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="0.05dp">


                <Button
                    android:id="@+id/zhuxiao"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/press_effect2"
                    android:text="注销账号"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/press_effect2"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:padding="0dp">

                <Button
                    android:id="@+id/gzh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/press_effect2"
                    android:text="关注公众号
                                       >"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</FrameLayout>