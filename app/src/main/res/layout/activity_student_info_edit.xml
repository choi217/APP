<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".student_info_edit">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/g"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/backbutton"
                android:layout_gravity="top"
                android:layout_marginLeft="0dp" />
            <TextView
                android:layout_width="210dp"
                android:layout_height="35dp"
                android:text="个人信息编辑"
                android:textSize="20sp"
                android:gravity="right"
                />
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:text="提交"
                android:background="@drawable/press_effect2"
                android:layout_marginLeft="50dp"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="用户名:"
                android:layout_gravity="center"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edit_username"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:background="@drawable/edit_info"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="姓名:"
                android:layout_gravity="center"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edit_name"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:background="@drawable/edit_info"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="省份:"
                android:layout_gravity="center"
                android:textSize="20sp"/>
            <Spinner
                android:id="@+id/edit_province"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:entries="@array/province"
                android:background="@drawable/edit_info"
                android:layout_gravity="center"
                android:spinnerMode="dialog"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="性别:"
                android:textSize="20sp"/>
            <RadioGroup
                android:id="@+id/edit_sex"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/edit_male"
                    android:layout_width="125dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="男" />

                <RadioButton
                    android:id="@+id/edit_female"
                    android:layout_width="125dp"
                    android:layout_height="30dp"
                    android:text="女" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="联系电话:"
                android:layout_gravity="center"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:background="@drawable/edit_info"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="电子邮箱:"
                android:layout_gravity="center"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:background="@drawable/edit_info"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="需求:"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/edit_need"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:textSize="20sp"
            android:maxLines="4"
            android:background="@drawable/edit_info"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</ScrollView>