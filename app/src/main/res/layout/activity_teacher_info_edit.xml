<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".teacher_info_edit">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/g"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/edit_back"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/backbutton"
                android:layout_gravity="top"
                android:layout_marginLeft="0dp" />
            <TextView
                android:layout_width="210dp"
                android:layout_height="35dp"
                android:text="个人信息编辑"
                android:textSize="20sp"
                android:gravity="right"
                />
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:text="提交"
                android:background="@drawable/press_effect2"
                android:layout_marginLeft="50dp"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="用户名:"
                android:layout_gravity="center"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edit_username"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:background="@drawable/edit_info"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="姓名:"
                android:layout_gravity="center"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edit_name"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:background="@drawable/edit_info"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="性别:"
                android:textSize="20sp"/>
            <RadioGroup
                android:id="@+id/edit_sex"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/edit_male"
                    android:layout_width="125dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="男" />

                <RadioButton
                    android:id="@+id/edit_female"
                    android:layout_width="125dp"
                    android:layout_height="30dp"
                    android:text="女" />

            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="年龄:"
                android:layout_gravity="center"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edit_age"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:background="@drawable/edit_info"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="专业:"
                android:layout_gravity="center"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edit_major"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:background="@drawable/edit_info"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="支持教学:"
                android:textSize="20sp"/>
            <RadioGroup
                android:id="@+id/edit_online"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/edit_a"
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="线上" />

                <RadioButton
                    android:id="@+id/edit_b"
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:text="线下" />
                <RadioButton
                    android:id="@+id/edit_both"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:text="线上或线下" />

            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="省份:"
                android:layout_gravity="center"
                android:textSize="20sp"/>
            <Spinner
                android:id="@+id/edit_province"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:entries="@array/province"
                android:background="@drawable/edit_info"
                android:layout_gravity="center"
                android:spinnerMode="dialog"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="住址:"
                android:layout_gravity="center"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/edit_address"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:background="@drawable/edit_info"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="联系电话:"
                android:layout_gravity="center"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:background="@drawable/edit_info"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="电子邮箱:"
                android:layout_gravity="center"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:background="@drawable/edit_info"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="145dp"
                android:layout_height="30dp"
                android:text="毕业/就读院校:"
                android:layout_gravity="center"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/edit_school"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:background="@drawable/edit_info"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="学历："
                android:layout_gravity="center"
                android:textSize="20sp"/>
            <Spinner
                android:id="@+id/edit_education"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:entries="@array/education"
                android:background="@drawable/edit_info"
                android:layout_gravity="center"
                android:spinnerMode="dialog"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="薪水要求:"
                android:layout_gravity="center"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/edit_salary"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:background="@drawable/edit_info"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="可教授科目:"
                android:layout_gravity="center"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/edit_subject"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:text="请选择科目"
                android:background="@drawable/press_effect2"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/subject_show"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:background="@drawable/edit_info"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="其他信息(包括自我描述、荣誉认证等）:"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textSize="20sp"
            android:maxLines="4"
            android:background="@drawable/edit_info"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="个人照片:"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/edit_pic"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/edit_info"
            />
        <Button
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="点此上传照片"
            android:layout_marginTop="5dp"
            android:background="@drawable/press_effect2"
            android:textSize="20sp"/>
    </LinearLayout>

</ScrollView>