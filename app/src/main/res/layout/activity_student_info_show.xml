<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".student_info_show">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/g"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/show_back"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/backbutton"
                android:layout_gravity="top"
                android:layout_marginLeft="0dp" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="个人信息展示"
                android:textSize="20sp"
                android:layout_marginLeft="60dp"
                android:gravity="right"
                />
            <Button
                android:id="@+id/btn_edit"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:text="编辑"
                android:background="@drawable/press_effect2"
                android:layout_marginLeft="50dp"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="用户名:"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/show_username"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="姓名:"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/show_name"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="性别:"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/show_gender"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="省份："
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/show_province"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="身份:"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/show_identity"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:text="学生"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="联系电话:"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/show_phone"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="电子邮箱:"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/show_email"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="需求:"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</ScrollView>