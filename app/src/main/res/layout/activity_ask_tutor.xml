<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/h"
        tools:context=".ask_tutor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="请填写以下表单(*为必填）:"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="*联系电话:"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edit_phone"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/edit_info"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="*居住地区:"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edit_address"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/edit_info"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="授课地区（线上授课可忽略）:"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/tech_address"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_info"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="学员性别:"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/edit_sex"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_info"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/edit_male"
                        android:layout_width="125dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:text="男"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/edit_female"
                        android:layout_width="125dp"
                        android:layout_height="30dp"
                        android:text="女"
                        android:textSize="18sp" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="学员年级:"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/edit_province"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/edit_info"
                    android:entries="@array/grade"
                    android:spinnerMode="dialog"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="*求教科目:"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/edit_subject"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/press_effect2"
                    android:text="请选择科目"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/subject_show"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edit_info"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="可上课时间:"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/class_time"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_info"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="学员情况描述:"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/situation"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_info"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="对教员要求:"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/teacher_request"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_info"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="*辅导方式:"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/edit_online"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/edit_a"
                        android:layout_width="65dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:text="线上" />

                    <RadioButton
                        android:id="@+id/edit_b"
                        android:layout_width="65dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:text="线下" />

                    <RadioButton
                        android:id="@+id/edit_both"
                        android:layout_width="65dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:text="均可" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="收费要求:"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/salary_request"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/edit_info"
                    android:hint=" 面议"
                    android:textColorHint="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <Button
                android:id="@+id/apply_now"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/press_effect3"
                android:text="立 即 申 请"
                android:textSize="20sp" />
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/tutor_back"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@drawable/backbutton"
        android:layout_gravity="top"
        android:layout_marginLeft="0dp" />

</FrameLayout>